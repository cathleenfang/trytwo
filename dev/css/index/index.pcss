@import "../lib/modules.pcss";
@import "../lib/normal.pcss";

.main-block {
  @mixin wrap1200;
  margin-top: 30px;
}

.page1-1 {
  @mixin dl;
  margin: 0 auto;
  width: 1062px;
  height: 509px;
  background-image: url(../../images/index/page1-1.png);
}

.page-block {
  margin: 60px auto 0;
  width: 1000px;
  p {
    margin: 10px 0;
    height: 200px;
    font-size: 14px;
    line-height: 18px;
    overflow: hidden;
  }
}

.page-next {
  margin: 60px auto 0;
  width: 1000px;
  @mixin clearfix;
  p {
    width: 420px;
    height: 200px;
    overflow: hidden;
  }
}

.next-left {
  @mixin fl;
}

.next-right {
  @mixin fr;
}

.tips {
  margin: 10px 0;
  @mixin clearfix;
  display: block;
  font-size: 16px;
  line-height: 32px;
  .photodiaryicon {
    margin-right: 5px;
    @mixin fl;
    display: block;
    width: 32px;
    height: 32px;
    background-image: url(../../images/index/icon/photodiary.png);
  }
}

