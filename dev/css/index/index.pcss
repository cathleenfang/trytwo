.add-email {
  margin: 100px 0;
  padding: 100px 0;
  width: 100%;
  background: #f0f0f0;
  .email-block {
    margin: 0 auto;
    width: 450px;
    p {
      margin-bottom: 50px;
      font-size: 30px;
    }
    .newemail {
      width: 450px;
      height: 30px;
      line-height: 30px;
      border-bottom: 3px solid #000;
      background: #f0f0f0 url(../../images/index/icon/post.png) no-repeat 95%;
    }
  }
}

.next {
  margin: 50px auto;
  display: block;
  font-size: 30px;
  line-height: 60px;
  width: 250px;
  text-align: center;
  text-decoration: none;
  color: #000;
  border: 1px solid #000;
}
