@import "../lib/modules.pcss";
@import "../lib/normal.pcss";

.main-block {
    @mixin wrap1200;
    margin-top: 30px;
}

.newest-page {
    @mixin clearfix;
}

.page1-1 {
    @mixin dl;
    margin: 0 auto;
    width: 1062px;
    height: 509px;
    background-image: url(../../images/index/page1-1.png);
}

.page-block {
    margin: 60px auto 0;
    width: 900px;
    a {
        font-size: 14px;
        text-decoration: none;
    }
    p {
        font-size: 14px;
        line-height: 21px;
        width: 900px;
    }
}

.show-image {
    margin: 20px 0;
    i {
        display: block;
        margin: 40px 0 0;
    }
    .page1-2 {
        width: 899px;
        height: 675px;
        background-image: url(../../images/index/page1-2.png);
    }

    .page1-3 {
        width: 899px;
        height: 675px;
        background-image: url(../../images/index/page1-3.png);
    }

    .page1-4 {
        width: 899px;
        height: 675px;
        background-image: url(../../images/index/page1-4.png);
    }
}

.share {
    @mixin clearfix;
    @mixin fr;
    padding: 40px 0;
    span {
        @mixin fl;
        display: block;
    }
    a {
        @mixin fl;
        margin: 0 10px;
        display: block;
    }
    .fb {
        width: 9px;
        height: 17px;
        background-image: url(../../images/index/icon/fb.png);
    }
    .tw {
        width: 18px;
        height: 13px;
        background-image: url(../../images/index/icon/tw.png);
    }
    .google {
        width: 17px;
        height: 17px;
        background-image: url(../../images/index/icon/google.png);
    }
    .weibo {
        width: 18px;
        height: 17px;
        background-image: url(../../images/index/icon/weibo.png);
    }
}

.next {
    background: #f5f5f5;
    .show-more {
        margin: 0 auto;
        padding: 40px 0;
        width: 900px;
        @mixin clearfix;
        i {
            display: block;
        }
        span {
            font-size: 20px;
        }
        ul {
            @mixin clearfix;
        }
        li {
            @mixin fl;
            margin-right: 40px;
        }
        .pagethree {
            margin-right: 0;
        }
    }
}

.moreone {
    width: 273px;
    height: 182px;
    background-image: url(../../images/index/fullp6-1.png);
}

.moretwo {
    width: 273px;
    height: 182px;
    background-image: url(../../images/index/fullp5-1.png);
}

.morethree {
    width: 273px;
    height: 182px;
    background-image: url(../../images/index/fullp4-1.png);
}

.note {
    margin: 0 auto;
    padding: 70px 0;
    width: 900px;
    .number {
        padding: 30px 0 10px;
        span {
            font-size: 20px;
            color: #b4ad9e;
        }
    }
}

.notelist {
    @mixin clearfix;
    margin: 20px 0 0;
    .personimg {
        @mixin fl;
        display: block;
        width: 70px;
        height: 70px;
        background-image: url(../../images/index/icon/person-1.png);
    }
    .listright {
        @mixin fl;
        margin-left: 30px;
        width: 800px;
        height: 70px;
        span {
            font-size: 20px;
        }
        .comment {
            font-size: 15px;
        }
    }
    .replly {
        display: block;
        margin-left: 100px;
        font-size: 20px;
        text-decoration: none;
        color: #b4ad9e;
    }
}

.join {
    margin-top: 20px;
    @mixin clearfix;
    .personi {
        @mixin fl;
        display: block;
        width: 70px;
        height: 70px;
        background-image: url(../../images/index/icon/jd.png);
    }
    input{
        margin: 10px 0 10px 30px;
        padding-left: 15px;
        border: 1px solid #b4ad9e;
        border-radius: 5px;
        width: 700px;
        height: 50px;
    }
}